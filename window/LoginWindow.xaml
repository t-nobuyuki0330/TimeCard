<Window x:Name="LoginWindow1" x:Class="TimeCard.window.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeCard.window"
        mc:Ignorable="d"
        Title="TimeCard" Height="200" Width="300" WindowStyle="SingleBorderWindow" MinWidth="300" MinHeight="200" MaxWidth="300" MaxHeight="200">
    <Grid x:Name="LoginWindowGrid" Width="300" Height="180" HorizontalAlignment="Center">
        <Button x:Name="LoginButton" Content="Login" Margin="30,111,30,0" Width="240" FontSize="16" Visibility="Visible" Click="LoginButton_Click" Height="38" VerticalAlignment="Top"/>
        <TextBox x:Name="LoginUserNo" Height="28" Margin="30,45,30,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <PasswordBox x:Name="LoginPassword" PasswordChar="*" Height="28" Margin="30,78,30,0" VerticalAlignment="Top" Width="240" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="社員番号" Height="35" Margin="30,10,180,0" VerticalAlignment="Top" Width="90" FontSize="16"/>

    </Grid>
</Window>
