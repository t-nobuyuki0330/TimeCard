<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeCard.Window.Page"
      xmlns:Control="clr-namespace:TimeCard.Window.Control" x:Class="TimeCard.Window.Page.UsersPage"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="600"
      Title="UsersPage" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="600" MinHeight="430" MaxWidth="600" MaxHeight="430" Height="430" Width="600">

    <Grid Width="600" MinWidth="600" MinHeight="430" MaxWidth="600" MaxHeight="430">
        <StackPanel>
            <Control:UserManageControl x:Name="UserManage"/>
            <ListBox x:Name="UsersData" Height="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding UserNo}" Foreground="Blue"/>
                            <TextBlock Text="{Binding Name}" FontSize="20"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
